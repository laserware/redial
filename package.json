{
  "name": "@laserware/redial",
  "version": "6.1.1",
  "description": "Redux IPC abstraction layer.",
  "author": "Mike Rourke <mike.w.rourke@gmail.com> (https://mikerourke.dev/)",
  "license": "MIT",
  "repository": {
    "url": "git+https://github.com/laserware/redial.git",
    "type": "git"
  },
  "homepage": "https://laserware.github.io/redial/",
  "type": "module",
  "exports": {
    "./main": {
      "import": {
        "types": "./dist/main.d.ts",
        "default": "./dist/main.mjs"
      },
      "require": {
        "types": "./dist/main.d.cts",
        "default": "./dist/main.cjs"
      }
    },
    "./preload": {
      "require": "./dist/preload.cjs",
      "import": "./dist/preload.mjs"
    },
    "./renderer": {
      "import": {
        "types": "./dist/renderer.d.ts",
        "default": "./dist/renderer.mjs"
      },
      "require": {
        "types": "./dist/renderer.d.cts",
        "default": "./dist/renderer.cjs"
      }
    }
  },
  "files": [
    "dist",
    "src",
    "main.d.ts",
    "renderer.d.ts"
  ],
  "keywords": [
    "redux",
    "ipc",
    "electron"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": [
    "./dist/preload.cjs",
    "./dist/preload.mjs"
  ],
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "bun run build",
    "preversion": "bun run check:biome && bun run check:types && bun run build",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "check:biome": "biome check --write src",
    "check:types": "tsc --noEmit",
    "ci": "biome ci src",
    "docs:generate": "typedoc  --options typedoc.json",
    "docs:serve": "mkdir -p ./site && cd ./site && bunx vite",
    "test": "bun test",
    "example": "cd example && bun run start"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "@reduxjs/toolkit": "^2.8.2",
    "@types/bun": "^1.2.18",
    "electron": "^37.2.0",
    "tsup": "^8.5.0",
    "typedoc": "^0.28.7",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "@laserware/stasis": ">=4",
    "@reduxjs/toolkit": ">=2",
    "electron": "*"
  },
  "peerDependenciesMeta": {
    "@laserware/stasis": {
      "optional": true
    },
    "@reduxjs/toolkit": {
      "optional": true
    },
    "electron": {
      "optional": false
    }
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "electron",
    "esbuild"
  ]
}
