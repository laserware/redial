{
  "name": "@laserware/redial",
  "version": "3.0.0-beta.1",
  "description": "Redux IPC abstraction layer.",
  "type": "module",
  "exports": {
    "./main": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.mjs",
      "require": "./dist/main.cjs"
    },
    "./renderer": {
      "types": "./dist/renderer.d.ts",
      "import": "./dist/renderer.mjs",
      "require": "./dist/renderer.cjs"
    }
  },
  "repository": {
    "url": "git+https://github.com/laserware/redial.git",
    "type": "git"
  },
  "author": "Mike Rourke <mike.w.rourke@gmail.com>",
  "license": "MIT",
  "files": [
    "dist",
    "main.d.ts",
    "renderer.d.ts"
  ],
  "keywords": [
    "redux",
    "ipc",
    "electron"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup && cd dist && npx prettier --write .",
    "prepublishOnly": "npm run build",
    "preversion": "npm run eslint && npm run typecheck",
    "version": "npm run prettier && git add -A src",
    "postversion": "git push && git push --tags",
    "docs:generate": "typedoc  --options typedoc.json",
    "docs:serve": "mkdir -p ./site && cd ./site && ../node_modules/.bin/vite",
    "typecheck": "tsc --noEmit",
    "prettier": "prettier --cache --write src example/src",
    "prettier:ci": "prettier --check src",
    "eslint": "eslint --cache src tsup.config.ts",
    "vitest": "vitest",
    "example": "cd example && npm run start"
  },
  "devDependencies": {
    "@laserware/eslint-config": "^5.3.0",
    "@reduxjs/toolkit": "^2.5.0",
    "@vitest/coverage-istanbul": "^2.1.8",
    "electron": "^33.2.1",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tslib": "^2.8.1",
    "tsup": "^8.3.5",
    "typedoc": "^0.27.6",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "electron": "*",
    "typescript": ">=5"
  },
  "optionalDependencies": {
    "@laserware/stasis": ">=4",
    "@reduxjs/toolkit": ">=2"
  },
  "prettier": {
    "trailingComma": "all",
    "overrides": [
      {
        "files": [
          "*.test.ts",
          "*.e2e.ts"
        ],
        "options": {
          "printWidth": 100
        }
      }
    ]
  }
}
